<Window x:Class="mdk_lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdk_lab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Margin="40 20" x:Name="lblinked" Background="AliceBlue" FontSize="20"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="сгенирировать" Margin="40 " FontSize="20" Click="Button_Click"/>
            <Button Grid.Row="1" Content="Произведение четных элементов списка" Margin="10 40" FontSize="17" Click="Button_Click_1"/>
            <TextBlock Grid.Row="2" Text="полученный елемент" FontSize="20" x:Name="tbresult" Background="AliceBlue" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40"/>
        </Grid>

    </Grid>
</Window>
